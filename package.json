{
  "name": "service-standards-auditor",
  "version": "0.1.0",
  "description": "A CLI tool to audit repositories for engineering best practice compliance (interview project)",
  "private": true,
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "service-standards-auditor": "dist/cli.js",
    "ssa": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "audit",
    "compliance",
    "standards",
    "cli",
    "best-practices",
    "quality",
    "code-quality"
  ],
  "author": "Arun Sondhi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aksondhi/interview-homework-service-standards-auditor.git"
  },
  "bugs": {
    "url": "https://github.com/aksondhi/interview-homework-service-standards-auditor/issues"
  },
  "homepage": "https://github.com/aksondhi/interview-homework-service-standards-auditor#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/cli.js",
    "dev": "ts-node-esm src/cli.ts",
    "dev:help": "ts-node-esm src/cli.ts --help",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\" --ignore-path .prettierignore",
    "prepare": "husky",
    "prepublishOnly": "npm run build && npm test",
    "version:patch": "npm version patch -m \"chore: bump version to %s\"",
    "version:minor": "npm version minor -m \"chore: bump version to %s\"",
    "version:major": "npm version major -m \"chore: bump version to %s\"",
    "release": "npm run build && npm test && npm publish"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "chart.js": "^4.5.1",
    "commander": "^12.1.0",
    "debug": "^4.4.3",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "semver": "^7.7.3",
    "yaml": "^2.5.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/debug": "^4.1.12",
    "@types/handlebars": "^4.0.40",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
